@model ReaderDto

@{
    ViewBag.Title = "Регистрация";
}

<h3>Регистрация читателя</h3>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label">Полное имя читателя</label>
                <input asp-for="FullName" class="form-control" required maxlength="100" pattern="[А-ЯЁA-Z][а-яёa-z]* [А-ЯЁA-Z][а-яёa-z]*( [А-ЯЁA-Z][а-яёa-z]*)?$" placeholder="Введите имя" style="width: 30%"/>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="margin-top: 6px" class="btn btn-outline-dark">Назад</a>
</div>