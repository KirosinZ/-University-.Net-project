@model ReaderDto

@{
    ViewBag.Title = "Изменение профиля";
}

<h3>Редактирование профиля</h3>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="hidden" asp-for="Balance" value="@Model.Balance" />

            <div class="form-group">
                <label asp-for="FullName" class="control-label">Полное имя читателя</label>
                <input asp-for="FullName" class="form-control" required maxlength="100" pattern="[А-ЯЁA-Z][а-яёa-z]* [А-ЯЁA-Z][а-яёa-z]*( [А-ЯЁA-Z][а-яёa-z]*)?$" placeholder="Введите имя" style="width: 30%"/>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.Id" style="margin-top: 6px" class="btn btn-outline-dark">Назад</a>
</div>