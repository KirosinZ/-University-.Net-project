@model DepositViewModel

@{
    ViewBag.Title = "Пополнение";
}

<h3>Пополнение средств — Баланс: @Model.Reader.Balance₽</h3>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Deposit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="ReaderId" value="@Model.ReaderId" />
            <input type="hidden" name="Reader.Id" value="@Model.ReaderId" />

            <div class="form-group">
                <label class="control-label">Пополнение на сумму: </label><br/>
                <input type="number" name="DepositAmount" value="0" min="0" />
            </div>

            <div class="form-group">
                <input type="submit" value="Пополнить" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.ReaderId" style="margin-top: 6px" class="btn btn-outline-dark">Назад</a>
</div>
